    <script>
        function ask(text, el) {
            if (!el.classList.contains('used')) {
                alert(text);
                el.classList.add('used');
                el.innerHTML = "&nbsp;"; 
            }
        }

        function changeScore(id, amount) {
            const el = document.getElementById(id);
            el.innerText = parseInt(el.innerText) + amount;
        }
    </script>
